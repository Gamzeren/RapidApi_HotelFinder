@model RapidApi_HotelFinder.Models.HotelDetailViewModel

@{
    ViewData["Title"] = "HotelDetail";
    Layout = "~/Views/Shared/_BookingLayout.cshtml";
}

<div class="breadcrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <h2>Bulunan Oteller</h2>
                    <div class="bt-option">
                        <a href="/Booking/Index/">Anasayfa</a>
                        <span>Oteller</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Breadcrumb Section End -->
<!-- Room Details Section Begin -->
<section class="room-details-section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="room-details-item">
                    <img src="@Model.HotelImages" alt="@Model.HotelName">
                    <div class="rd-text">
                        <div class="rd-title">
                            <h3>@Model.HotelName</h3>
                            <div class="rdt-right">
                                <div class="rating">
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star"></i>
                                    <i class="icon_star-half_alt"></i>
                                </div>
                                <a href="#">Booking Now</a>
                            </div>
                        </div>
                        <h2>@Model.PricePerNight ₺<span>/Gece</span></h2>
                        <table>
                            <tbody>
                                <tr>
                                    <td class="r-o">Oda Büyüklüğü:</td>
                                    <td>@Model.RoomSize</td>
                                </tr>
                                <tr>
                                    <td class="r-o">Kapasite:</td>
                                    <td>Max 5 kişi</td>
                                </tr>
                                <tr>
                                    <td class="r-o">Yatak:</td>
                                    <td>@Model.BedConfig</td>
                                </tr>
                                <tr>
                                    <td class="r-o">Hizmetlerimiz:</td>
                                    <td>Wifi, Klima, Ücretsiz İçecek, Eşsiz Restoran, TV & Netflix, 7/24 Hizmet,...</td>
                                </tr>
                            </tbody>
                        </table>
                        <p class="f-para">
                            @Model.Description
                        </p>
                        <p>
                            @foreach (var facility in Model.Facilities)
                            {
                                <li><i class="fa fa-check"></i> @facility</li>
                            }
                        </p>
                        <div class="carousel-inner">
                            @for (int i = 0; i < Model.HotelImages.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@Model.HotelImages[i]" class="d-block w-100"
                                         alt="Hotel Image @i"
                                         style="max-height:450px; object-fit:cover;" />
                                </div>
                            }
                        </div>

                        <ol class="carousel-indicators">
                            @for (int i = 0; i < Model.HotelImages.Count; i++)
                            {
                                <li data-target="#room-thumbnail--slide" data-slide-to="@i" class="@(i == 0 ? "active" : "")">
                                    <img src="@Model.HotelImages[i]" class="d-block w-100"
                                         alt="Thumb @i"
                                         style="max-height:80px; object-fit:cover;" />
                                </li>
                            }
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

